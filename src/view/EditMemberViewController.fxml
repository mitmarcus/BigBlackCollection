<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.EditMemberViewController">
   <children>
      <HBox alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="60.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#returnButtonPressed" text="Return to main menu" />
         </children>
         <padding>
            <Insets left="45.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="180.0" prefWidth="200.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Edit member">
               <font>
                  <Font size="25.0" />
               </font>
            </Text>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="110.0" prefWidth="200.0">
         <children>
            <TextField fx:id="firstNameText" prefHeight="26.0" prefWidth="130.0" promptText="First Name">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="lastNameText" prefHeight="26.0" prefWidth="112.0" promptText="Last Name">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="phoneText" alignment="CENTER" layoutX="231.0" layoutY="52.0" prefHeight="26.0" prefWidth="113.0" promptText="Phone number">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#editMember" text="Apply" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="110.0" prefWidth="200.0" />
   </children>
</VBox>
